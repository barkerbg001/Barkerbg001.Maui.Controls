<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Barkerbg001="clr-namespace:Barkerbg001.Maui.Controls.Components"
             x:Class="Barkerbg001.Maui.Controls.Components.CustomPicker"
             x:Name="this">
    <Barkerbg001:CustomStackLayout Orientation="Horizontal" Tapped="CustomLabel_Tapped" HorizontalOptions="FillAndExpand" BackgroundColor="{Binding BackgroundColor, Source={x:Reference this}}" VerticalOptions="Center">
        <Label x:Name="edtInput"  FontAttributes="Bold" FontSize="15"  TextColor="#707070" InputTransparent="True" HeightRequest="24" VerticalTextAlignment="Center" Padding="15,0,0,0"
                    HorizontalOptions="StartAndExpand" BackgroundColor="Transparent" VerticalOptions="Center" FontFamily="PT Sans Bold" />
        <Image Source="expander.png" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,10,0" InputTransparent="True" HeightRequest="15"/>
    </Barkerbg001:CustomStackLayout>
</ContentView>
